<h2>Add a Dish</h2>


<form action="/add-food" method="POST" enctype="multipart/form-data">

  <label>Name:</label>
  <input type="text" name="name" value="{{food.name}}">

  <label>Description:</label>
  <input type="text" name="description" value="{{food.description}}">

  <label>picture:</label>
  <img src="{{food.pic}}">
  <p>Replace it:</p>
  <input type="file" name="image">

  <label>Location:</label>

  <select name="location">
    {{#each locations}}
    <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>
  Dont see your location? <a href="/add-location">Add a Location</a>
  <button>Save</button>
</form>