<h3>{{food.name}}</h3>
<div class="row">
  <div class="col s12 m12 l6">
    <img src="{{food.pic}}" alt="{{food.name}}">
  </div>
  <div class="col s12 m12 l6">
    <p>{{food.description}}</p>
    <a href="/profile/{{food.owner}}">creator</a>
    {{#if food.isowner}}
    <a href="food/{{food._id}}/edit">Edit</a>
    {{/if}}
  </div>
</div>
<hr>
<div class="row">
  <h3>Location:</h3>
  <div class="col s12 m12 l6">
    <img src="{{location.pic}}" alt="{{location.name}}">
  </div>
  <div class="col s12 m12 l6">

    <p>{{location.name}}</p>
    <p>Address:</p>
    <p>{{location.streetAddress}} {{location.city}}, {{location.state}} {{location.zipCode}}</p>
    <p><a href="/location/{{location._id}}">view details</a></p>
  </div>
</div>