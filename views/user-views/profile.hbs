<div class="row">
  <div class="col s12 m3">
    <h2>{{user.username}}</h2>
    <img src="{{user.pic}}" class="user-pic">
    <p>Followers: {{user.followers.lenght}}</p>
    <p>Following: {{user.fallowing.lenght}}</p>
    <a href="/add-food" class="waves-effect waves-light btn">Add a Dish</a>
    <a href="/add-location" class="waves-effect waves-light btn">Add a Location</a>
  </div>
  <div class="col s12 m9">
    {{#if foods}}
    {{#each foods}}
    <div class="col s12 m6">
      <div class="card">
        <div class="card-image">
          <img src="{{#if this.pic}}{{this.pic}}{{else}}images/coming-soon.png{{/if}}">
        </div>
        <div class="card-content">
          <span class="card-title">{{this.name}}</span>
          <p>{{this.description}}</p>
        </div>
        <div class="card-action" style="text-align: center">
          <a href="/food/{{this._id}}">View Details</a>
        </div>
        <div class="card-action" style=" display: flex; justify-content: space-around;">
          <a href="/food/{{this._id}}/edit">Edit</a>
          <a href="/food/{{this._id}}/delete">Delete</a>
        </div>
      </div>
    </div>
    {{/each}}
    {{/if}}

  </div>
</div>