<div class="row">
  <div class="col s12 m3 center-align">
    <h3>{{user.username}}</h3>
    <img src="{{user.pic}}" class="circle resposive-img">
    <a href="/profile/edit" class="waves-effect waves-light btn">Edit</a>
    <p>Followers: {{#if user.followers}} {{user.followers.lengh}}{{else}}0{{/if}}</p>
    <p>Following: {{#if user.following}}{{user.following.lenght}}{{else}}0{{/if}}</p>
    <p><a href="/add-food" class="waves-effect waves-light btn">Add a Dish</a></p>
    <p><a href="/add-location" class="waves-effect waves-light btn">Add a Location</a></p>
  </div>
  <div class="col s12 m9">
    {{#if foods}}
    {{#each foods}}
    <div class="col s12 m6">
      <div class="card hoverable medium">
        <div class="card-image">
          <img src="{{#if this.pic}}{{this.pic}}{{else}}images/coming-soon.png{{/if}}">
        </div>
        <div class="card-content">
          <span class="card-title">{{this.name}}</span>
          <p>{{this.description}}</p>
        </div>
        <div class="card-action" style="text-align: center; bottom: 50px;">
          <a href="/food/{{this._id}}">View Details</a>
        </div>
        <div class="card-action" style=" display: flex; justify-content: space-around;">
          <a href="/food/{{this._id}}/edit">Edit</a>
        </div>
      </div>
    </div>
    {{/each}}
    {{/if}}

  </div>
</div>