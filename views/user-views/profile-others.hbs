<div class="row">
  <div class="col s12 m3 center-align">
    <h4>{{thisUser.username}}</h4>
    <img src="{{thisUser.pic}}" class="circle resposive-img">
    <a href="/user/follow" class="waves-effect waves-light btn">Follow</a>
    <p>Followers: {{#if thisUser.followers}} {{user.followers.lengh}}{{else}}0{{/if}}</p>
    <p>Following: {{#if thisUser.following}}{{user.following.lenght}}{{else}}0{{/if}}</p>
  </div>
  <div class="col s12 m9">
    {{#if foods}}
    {{#each foods}}
    <div class="col s12 m6">
      <div class="card">
        <div class="card-image">
          <img src="{{#if this.pic}}{{this.pic}}{{else}}images/coming-soon.png{{/if}}">
        </div>
        <div class="card-content">
          <span class="card-title">{{this.name}}</span>
          <p>{{this.description}}</p>
        </div>
        <div class="card-action" style="text-align: center">
          <a href="/food/{{this._id}}">View Details</a>
        </div>
        <div class="card-action" style=" display: flex; justify-content: space-around;">
          <a href="/food/{{this._id}}/edit">Edit</a>
        </div>
      </div>
    </div>
    {{/each}}
    {{/if}}

  </div>
</div>